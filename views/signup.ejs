<% const pageInformation = {title:'登録画面',description:'登録画面' } %>
<%-include('partials/header', {pageInfo:pageInformation}); %>
<main>
  <div class="register-box">
    <p id="register-text">新規登録</p>
    <div class="row">
      <form action="/signup" method="post" class="col s12">
        <div class="row">
          <div class="input-field col s6">
            <input
              placeholder="山田"
              id="first_name"
              type="text"
              class="validate"
              name="first"
              required="required"
              minlength="1"
            />
            <label for="first_name">氏</label>
          </div>
          <div class="input-field col s6">
            <input
              placeholder="太朗"
              id="last_name"
              type="text"
              class="validate"
              name="last"
              required="required"
              minlength="1"
            />
            <label for="last_name">名</label>
          </div>
          <% if(messages[0] ==='Not written name'){ %>
          <div class="error-box">
            <p class="error-messeage"><%='氏名が未記入です。' %></p>
          </div>
          <% }%>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input
              id="email"
              type="email"
              class="validate"
              name="email"
              required="required"
              minlength="1"
            />
            <label for="email">Email</label>
            <div class="error-box">
              <% if(messages[0] ==='Not written Email'){ %>
              <p class="error-messeage"><%='メールアドレスが未記入です。' %></p>
              <% } %>
            </div>
            <% if(messages[0] === 'Already exist user Email'){ %>
            <div class="error-box">
              <p class="error-messeage">
                <%= '既に登録済みのメールアドレスです。'%>
              </p>
            </div>
            <% }%>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input
              id="password"
              type="password"
              class="validate"
              name="password"
              required="required"
              minlength="6"
              pattern="^[a-zA-Z\d]{8,100}"
            />
            <label for="password">Password（半角英数字8文字以上）</label>
            <% if(messages[0]==='Not written password'){ %>
            <div class="error-box">
              <p class="error-messeage"><%='パスワードが未記入です。' %></p>
            </div>
            <% }%>
          </div>
        </div>
        <div class="submit-box">
          <input
            id="submit-btn"
            type="submit"
            value="登録する"
            class="waves-effect waves-light btn"
          />
          <label for="submit-btn"></label>
        </div>
      </form>
    </div>
    <a href="/">トップ画面に戻る </a>
  </div>
</main>
<%- include('partials/footer'); %>
