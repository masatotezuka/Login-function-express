<% const pageInformation =
{title:'パスワードをリセット',description:'パスワードリセットの画面' } %>
<%-include('partials/header', {pageInfo:pageInformation}); %>
<main>
  <div class="request-password-box">
    <p id="input-mail-text">メールアドレスを入力してください</p>
    <div class="row">
      <form action="/requestpassword" method="post" class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input
              id="email"
              type="email"
              class="validate"
              name="email"
              required="required"
              minlength="1"
            />
            <label for="email">Email</label>
            <% if(messages[0]==='Not written Email'){ %>
            <div class="error-box">
              <p class="error-messeage"><%='メールアドレスが未入力です。' %></p>
            </div>
            <% }%>
          </div>
        </div>
        <div class="submit-box">
          <input
            id="submit-btn"
            type="submit"
            value="パスワードをリセット"
            class="waves-effect waves-light btn"
          />
          <label for="submit-btn"></label>
        </div>
        <% if(messages[0]==='Not found Email'){%>
        <p id="mail-unmatch">
          <%= '入力したアドレスは登録されておりません。' %>
        </p>
        <% } %>
      </form>
    </div>
    <a href="/">トップ画面に戻る </a>
  </div>
</main>
<%- include('partials/footer'); %>
