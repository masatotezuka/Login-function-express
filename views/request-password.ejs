<% const pageInformation =
{title:'パスワードをリセット',description:'パスワードリセットの画面' } %>
<%-include('partials/header', {pageInfo:pageInformation}); %>
<main>
  <div class="request-password-box">
    <p id="input-mail-text">メールアドレスを入力してください</p>
    <div class="row">
      <form action="/requestpassword" method="post" class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate" name="email" />
            <label for="email">Email</label>
            <% if(errorUndefined[0]!==''){ %>
            <div class="error-box">
              <p class="error-messeage"><%=errorUndefined[0] %></p>
            </div>
            <% }%>
          </div>
        </div>
        <div class="submit-box">
          <input
            id="submit-btn"
            type="submit"
            value="パスワードをリセット"
            class="waves-effect waves-light btn"
          />
          <label for="submit-btn"></label>
        </div>
        <% if(errorUnmatch.length>0){%>
        <p id="mail-unmatch"><%= errorUnmatch %></p>
        <% } %>
      </form>
    </div>
    <a href="/">トップ画面に戻る </a>
  </div>
</main>
<%- include('partials/footer'); %>
